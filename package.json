{
  "name": "riksutin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/client",
    "src/server",
    "src/validators"
  ],
  "scripts": {
    "start": "docker compose up",
    "start:prod": "NODE_ENV=production npm run build --workspace=server",
    "start:test": "NODE_ENV=test npm run build --workspace=server",
    "start:dev": "NODE_ENV=development concurrently \"npm run start:dev:server\" \"npm run start:dev:client\"",
    "start:dev:server": "npm run watch --workspace=server",
    "start:dev:client": "npm run watch --workspace=client",
    "test": "npx playwright test",
    "lint": "eslint",
    "format": "prettier --write \"*.{ts,tsx,json,css,md}\"",
    "build": "npm run build --workspace=client",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint",
    "*.{ts,tsx,json,css,md}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "9.20.0",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/eslint": "^8.4.10",
    "@types/jest": "^27.5.2",
    "@types/prettier": "^2.7.2",
    "concurrently": "^7.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^3.5.1",
    "typescript-eslint": "^8.24.0"
  },
  "proxy": "http://localhost:8000"
}
